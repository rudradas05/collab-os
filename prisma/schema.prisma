generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum WorkspaceRole {
  OWNER
  ADMIN
  MEMBER
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

model User {
  id                   String                @id @default(uuid())
  email                String                @unique
  name                 String
  passwordHash         String?
  googleId             String?               @unique
  avatar               String?
  role                 Role                  @default(USER)
  coins                Int                   @default(0)
  tier                 String                @default("FREE")
  createdAt            DateTime              @default(now())
  ownedWorkspaces      Workspace[]           @relation("WorkspaceOwner")
  workspaceMemberships WorkspaceMember[]
  passwordResetTokens  PasswordResetToken[]
  assignedTasks        Task[]                @relation("TaskAssignee")
  coinTransactions     CoinTransaction[]
  invitationsSent      WorkspaceInvitation[] @relation("InvitationsSent")
  invitationsReceived  WorkspaceInvitation[] @relation("InvitationsReceived")
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  otp       String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

model Workspace {
  id          String                @id @default(uuid())
  name        String
  ownerId     String
  createdAt   DateTime              @default(now())
  owner       User                  @relation("WorkspaceOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members     WorkspaceMember[]
  projects    Project[]
  invitations WorkspaceInvitation[]
}

model WorkspaceMember {
  id          String        @id @default(uuid())
  userId      String
  workspaceId String
  role        WorkspaceRole
  createdAt   DateTime      @default(now())
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace   Workspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
}

model Project {
  id          String    @id @default(uuid())
  name        String
  description String?
  workspaceId String
  createdAt   DateTime  @default(now())
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  tasks       Task[]

  @@index([workspaceId])
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

model Task {
  id          String       @id @default(uuid())
  title       String
  status      TaskStatus   @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  projectId   String
  assignedTo  String?
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime     @default(now())
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee    User?        @relation("TaskAssignee", fields: [assignedTo], references: [id], onDelete: SetNull)

  @@index([projectId])
  @@index([assignedTo])
}

model CoinTransaction {
  id          String   @id @default(uuid())
  userId      String
  amount      Int
  reason      String
  referenceId String
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([referenceId])
  @@index([userId])
}

model AIMessage {
  id          String   @id @default(uuid())
  userId      String
  workspaceId String
  role        String
  content     String
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([workspaceId])
}

model ChatMessage {
  id          String   @id @default(uuid())
  userId      String
  workspaceId String
  content     String
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([workspaceId])
}

model Subscription {
  id                   String    @id @default(uuid())
  userId               String    @unique
  plan                 String
  status               String
  stripeCustomerId     String? // Optional for coin-only payments
  stripeSubscriptionId String?
  currentPeriodEnd     DateTime?
  createdAt            DateTime  @default(now())

  @@index([stripeCustomerId])
  @@index([stripeSubscriptionId])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  message   String
  type      String // INFO | SUCCESS | WARNING
  metadata  String? // JSON string for additional data (e.g., invitation info)
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

model Automation {
  id          String   @id @default(uuid())
  workspaceId String
  type        String // TASK_DONE | DEADLINE | PROJECT_CREATED
  enabled     Boolean  @default(true)
  createdAt   DateTime @default(now())

  @@unique([workspaceId, type])
  @@index([workspaceId])
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model WorkspaceInvitation {
  id          String           @id @default(uuid())
  workspaceId String
  inviterId   String
  inviteeId   String
  status      InvitationStatus @default(PENDING)
  createdAt   DateTime         @default(now())
  respondedAt DateTime?

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  inviter   User      @relation("InvitationsSent", fields: [inviterId], references: [id], onDelete: Cascade)
  invitee   User      @relation("InvitationsReceived", fields: [inviteeId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, inviteeId])
  @@index([inviteeId])
  @@index([workspaceId])
}
