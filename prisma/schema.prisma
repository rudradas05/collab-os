generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  OWNER
  ADMIN
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  passwordHash String?
  googleId     String?  @unique
  avatar       String?
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
}
